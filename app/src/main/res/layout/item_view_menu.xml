<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="#E6E6E6"
    android:elevation="4dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        tools:src="@drawable/iced_americano" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            tools:text="BROWN Iced Latte" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_r_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_size_r"
                android:drawablePadding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:text="$2.40" />

            <TextView
                android:id="@+id/tv_l_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:drawableTop="@drawable/ic_size_l"
                android:drawablePadding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:text="$3.35" />

            <TextView
                android:id="@+id/tv_g_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_size_g"
                android:drawablePadding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:text="$3.75" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>